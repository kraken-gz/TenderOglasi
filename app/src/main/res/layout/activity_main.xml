<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>




<android.support.v4.widget.NestedScrollView

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">





<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context=".MainActivity">





    <Button
        android:id="@+id/auto_oglasi"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="272dp"
        android:text="Auto oglasi"
        android:background="@drawable/rounded_button"
        android:drawableLeft="@drawable/ic_round_directions_car_24"
        android:gravity="center"
        android:paddingLeft="25dp"
        android:elevation="8dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline5"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        app:layout_constraintVertical_bias="1.0" />




    <Button
        android:id="@+id/posao_oglasi"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="192dp"
        android:text="Posao oglasi"
        android:background="@drawable/rounded_button"
        android:drawableLeft="@drawable/work"
        android:gravity="center"
        android:paddingLeft="25dp"
        android:elevation="8dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline5"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/auto_oglasi"
        app:layout_constraintVertical_bias="1.0" />


    <Button
        android:id="@+id/nekretnine_oglasi"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="104dp"
        android:text="Nekretnine oglasi"
        android:background="@drawable/rounded_button"
        android:drawableLeft="@drawable/real_estate"
        android:gravity="center"
        android:elevation="8dp"
        android:paddingLeft="25dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline5"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/posao_oglasi"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/usluzne_djelatnosti"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rounded_button"
        android:drawableLeft="@drawable/usluzne_delatnosti"
        android:gravity="center"
        android:elevation="8dp"
        android:paddingLeft="25dp"
        android:text="Uslužne djelatnosti"
        app:layout_constraintBottom_toTopOf="@+id/guideline5"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/nekretnine_oglasi"
        app:layout_constraintVertical_bias="1.0" />


    <Button
        android:id="@+id/aparati_elektronika"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:background="@drawable/rounded_button"
        android:drawableLeft="@drawable/appliances"
        android:gravity="center"
        android:paddingLeft="25dp"
        android:elevation="8dp"
        android:text="Aparati i elektronika"
        app:layout_constraintBottom_toTopOf="@+id/zdravlje_sport"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/guideline5"
        app:layout_constraintVertical_bias="0.0" />


    <Button
        android:id="@+id/zdravlje_sport"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="125dp"
        android:background="@drawable/rounded_button"
        android:drawableLeft="@drawable/ic_round_directions_bike_24"
        android:gravity="center"
        android:paddingLeft="25dp"
        android:elevation="8dp"
        android:text="Zdravlje, sport i hobi"
        app:layout_constraintBottom_toTopOf="@+id/odjeca_obuca"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/guideline5"
        app:layout_constraintVertical_bias="0.0" />


    <Button
        android:id="@+id/odjeca_obuca"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:background="@drawable/rounded_button"
        android:drawableLeft="@drawable/ic_round_accessibility_new_24"
        android:gravity="center"
        android:paddingLeft="25dp"
        android:elevation="8dp"
        android:text="Odjeca i obuća"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline" />







    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05109489" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.50" />


    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="403dp"
        android:layout_height="53dp"
        android:layout_centerInParent="true"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-7799603437316055/4944438446"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline">

    </com.google.android.gms.ads.AdView>


</android.support.constraint.ConstraintLayout>



</android.support.v4.widget.NestedScrollView>

</LinearLayout>