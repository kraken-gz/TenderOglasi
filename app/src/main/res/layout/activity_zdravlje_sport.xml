<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>


<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">




    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".zdravlje_sport">



        <Button
            android:id="@+id/lov_ribolov"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="272dp"
            android:text="Lov i ribolov"
            android:background="@drawable/rounded_button"
            android:elevation="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline5"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="@+id/guideline3"
            app:layout_constraintVertical_bias="1.0" />




        <Button
            android:id="@+id/kucni_ljubimci"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="192dp"
            android:text="Kućni ljubimci"
            android:background="@drawable/rounded_button"
            android:elevation="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline5"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/auto_oglasi"
            app:layout_constraintVertical_bias="1.0" />


        <Button
            android:id="@+id/zdravstvo"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="114dp"
            android:background="@drawable/rounded_button"
            android:elevation="8dp"
            android:text="Zdravstvo"
            app:layout_constraintBottom_toTopOf="@+id/guideline5"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/posao_oglasi"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/literatura"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="Literatura"
            android:background="@drawable/rounded_button"
            android:elevation="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline5"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/nekretnine_oglasi"
            app:layout_constraintVertical_bias="1.0" />


        <Button
            android:id="@+id/sportska_oprema"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:elevation="8dp"
            android:text="Sportska i kamp oprema"
            app:layout_constraintBottom_toTopOf="@+id/zdravlje_sport"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="@+id/guideline5"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/njega_lica"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:background="@drawable/rounded_button"
            android:elevation="8dp"
            android:text="Njega lica i tijela"
            app:layout_constraintBottom_toTopOf="@+id/odjeca_obuca"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="@+id/guideline5"
            app:layout_constraintVertical_bias="0.0" />


        <Button
            android:id="@+id/hobi_akvaristika"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="130dp"
            android:background="@drawable/rounded_button"
            android:elevation="8dp"
            android:text="Hobi, akvaristika, antikviteti"
            app:layout_constraintBottom_toTopOf="@+id/guideline4"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/guideline" />


        <Button
            android:id="@+id/muzicki_instrumenti"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="57dp"
            android:background="@drawable/rounded_button"
            android:elevation="8dp"
            android:text="Muzički instrumenti i oprema"
            app:layout_constraintBottom_toTopOf="@+id/guideline4"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintStart_toStartOf="@+id/guideline" />



        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.05" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.95" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.50" />

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="403dp"
            android:layout_height="53dp"
            android:layout_centerInParent="true"
            app:adSize="BANNER"
            app:adUnitId="ca-app-pub-7799603437316055/4944438446"
            app:layout_constraintBottom_toTopOf="@+id/guideline4"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintStart_toStartOf="@+id/guideline">

        </com.google.android.gms.ads.AdView>


    </android.support.constraint.ConstraintLayout>


</android.support.v4.widget.NestedScrollView>

</LinearLayout>